// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("POSTGRES_URL")
}

model TestGroup {
  id      Int     @id @default(autoincrement())
  name    String
  tests   Test[]
  subject String
}

model Test {
  id        Int       @id @default(autoincrement())
  testGroup TestGroup @relation(fields: [testGroupId], references: [id])
  testGroupId Int

  number     Int
  aboveMain  String?
  main       String
  topOfFile  String?
  expect     String[]
  stdin      String?
}
